/** 
 * Multiplexor:
 * out = a if sel == 0
 *       b otherwise
 */

CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    Not(in=sel, out=notsel);
    Nand(a=a, b=notsel, out=out1);
    Nand(a=b, b=sel, out=out2);
    And (a=out1, b=out2, out=notout);
    Not (in=notout, out=out);
}